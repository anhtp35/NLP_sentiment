{
  "manifest_version": 3,
  "name": "AI Emotion Detector",
  "version": "1.0",
  "description": "Message Sentiment Detection Extension",
  "permissions": ["activeTab"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AI Emotion Detector" 
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*", "*://chat.zalo.me/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}